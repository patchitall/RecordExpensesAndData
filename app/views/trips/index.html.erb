<p id="notice"><%= notice %></p>

<h1>My Trips</h1>

<table class="table">
  <thead>
    <tr>
      <th>Destination</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td>  <%= link_to trip.destination, trip %></td>
        <td class="dateonlyshow"><%= trip.start_date.strftime("%b %d").to_s %></td>
        <td class="dateonlyshow"><%= trip.end_date.strftime("%b %d").to_s %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path, class: "btn btn-md" %>
