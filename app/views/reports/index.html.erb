<p id="notice"><%= notice %></p>

<h1>Listing Reports</h1>

<table>
  <thead>
    <tr>
      <th>Report start</th>
      <th>Report end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.report_start %></td>
        <td><%= report.report_end %></td>
        <td><%= link_to 'Show', report, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_report_path(report), class: "btn btn-default" %></td>
        <td><%= link_to 'Delete', report, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-md" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path, class: "btn btn md" %>
